{
  "name": "react-intl-wrapper",
  "version": "1.0.0",
  "description": "A wrapper around react-intl",
  "main": "src/index.js",
  "files": [
    "/src"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "git-cz",
    "lint": "./node_modules/.bin/eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "examples": "webpack serve --mode development",
    "extract": "formatjs extract",
    "compile": "formatjs compile",
    "draft-release": "npm run lint && standard-version",
    "draft-release:simulate": "npm run draft-release -- --dry-run",
    "translations:extract": "node scripts/extract-translations.js",
    "translations:compile": "node scripts/compile-translations.js"
  },
  "keywords": [
    "i18n",
    "internalization",
    "l10n",
    "localization",
    "react",
    "react-intl"
  ],
  "author": "simplymichael <simplymichaelorji@gmail.com> (https://github.com/simplymichael)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simplymichael/react-intl-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/simplymichael/react-intl-wrapper/issues"
  },
  "homepage": "https://github.com/simplymichael/react-intl-wrapper#readme",
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-intl": "^5.20.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@formatjs/cli": "^4.3.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-formatjs": "^10.3.9",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.1",
    "eslint-plugin-react": "^7.26.1",
    "ghooks": "^2.0.4",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "standard-version": "^9.3.1",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint"
    }
  }
}
